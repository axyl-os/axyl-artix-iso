#!/usr/bin/env bash
echo "#################################"
echo "Start axyl-before"
echo "#################################"

echo "Populate Core Team keys"
echo "#################################"
pacman-key --init
pacman-key --populate artix
pacman-key --populate archlinux

echo "Copy grub to /boot/grub/themes"
echo "#################################"
cp -rf /usr/share/grub/themes/axyl /boot/grub/themes

echo "#################################"
echo "End axyl-before"
echo "#################################"
rm -f /usr/local/bin/axyl-before
